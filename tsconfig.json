{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": [
      "node",
      "nativewind/types"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server/**/*",
    "drizzle/**/*",
    "shared/**/*",
    "drizzle.config.ts",
    "hooks/use-auth.ts",
    "lib/trpc.ts",
    "lib/_core/api.ts",
    "lib/_core/auth.ts",
    "constants/oauth.ts",
    "tests/auth.logout.test.ts"
  ]
}
